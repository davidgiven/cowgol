include "cowgol.coh";
include "tests/_framework.coh";

sub case_uint8(i: uint8): (out: uint8)
	case i is
		when 0: out := 0;
		when 1: out := 1;
		when 2: out := 2;
		when 3: out := 3;
		when else: out := 4;
	end case;
end sub;

sub case_uint8_noelse(i: uint8): (out: uint8)
	out := 4;
	case i is
		when 0: out := 0;
		when 1: out := 1;
		when 2: out := 2;
		when 3: out := 3;
	end case;
end sub;

sub case_int8(i: uint8): (out: int8)
	case i is
		when -2: out := -2;
		when -1: out := -1;
		when 0: out := 0;
		when 1: out := 1;
		when else: out := 4;
	end case;
end sub;

