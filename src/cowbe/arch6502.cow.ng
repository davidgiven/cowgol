            DoParamDirect_sta(dest, 1);
        else
            DoParamDirect(dest, OC_STX, 1);
        end if;

        if sext != 0 then
            E_txa();
            E_callhelper("_signa");
        else
            E_loadconst(REG_A, 0);
        end if;

        DoParamDirect_sta(dest, 2);
        DoParamDirect_sta(dest, 3);
    end sub;
%}

