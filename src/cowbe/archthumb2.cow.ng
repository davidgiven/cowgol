%{
	sub Div(insn: string, dest: RegId, lhs: RegId, rhs: RegId) is
		E_insn(insn);
		E_reg(dest);
		E_comma();
		E_reg(lhs);
		E_comma();
		E_reg(rhs);
		E_nl();
	end sub;

	sub Rem(insn: string, dest: RegId, lhs: RegId, rhs: RegId) is
		Div(insn, REG_R6, lhs, rhs);

		E_insn("mls");
		E_reg(dest);
		E_comma();
		E_reg(REG_R6);
		E_comma();
		E_reg(rhs);
		E_comma();
		E_reg(lhs);
		E_nl();
	end sub;

	sub Extend(insn: string, reg: RegId) is
		E_insn(insn);
		E_reg(reg);
		E_comma();
		E_reg(reg);
		E_nl();
	end sub;
%}

