// --- Case -----------------------------------------------------------------

gen STARTCASE1(r32:lhs) { E_insn("sxtb"); E_reg(REG_R0); E_comma(); E_reg($lhs); E_nl(); }
gen STARTCASE2(r32:lhs) { E_insn("sxth"); E_reg(REG_R0); E_comma(); E_reg($lhs); E_nl(); }
gen STARTCASE4(r0);

%{
	sub WhenCase(c: [MidcodeWhencase]) is
		if (c.value >= -128) and (c.value < 127) then
			E_insn("cmp");
			E_reg(REG_R0);
			E(", #");
			E_i32(c.value);
			E_nl();
		else
			var v := c.value as uint32;
			E_insn("mov r1, #");
			E_u16(v as uint16);
			E_nl();

			v := v >> 16;
			if v != 0 then
				E_insn("movt r1, #");
				E_u16(v as uint16);
				E_nl();
			end if;

			E("\tcmp r0, r1\n");
		end if;
		E_jump("bne", c.falselabel);
	end sub;
%}

gen WHENCASE1():c { WhenCase(&$c); }
gen WHENCASE2():c { WhenCase(&$c); }
gen WHENCASE4():c { WhenCase(&$c); }

gen ENDCASE1();
gen ENDCASE2();
gen ENDCASE4();

