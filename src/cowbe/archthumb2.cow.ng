%{
	sub RShift(extend: string, shift: string, dest: RegId, rhs: RegId, rhsop: [Operand]) is
		if extend != (0 as string) then
			E_insn(extend);
			E_reg(dest);
			E_comma();
			E_reg(dest);
			E_nl();
		end if;

		E_insn(shift);
		E_reg(dest);
		E_comma();
		E_op(rhs, rhsop);
		E_nl();
	end sub;
%}

gen r32 := RSHIFTU1($$, r32|imm5:rhs) { RShift("uxtb", "lsr", $$, $rhs, &$@rhs.operand); }
