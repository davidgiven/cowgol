// --- Subroutines ----------------------------------------------------------

gen STARTSUB()
{
	RegCacheReset();

	EmitterOpenStream(current_subr);

	E("\n\n\t# ");
	E(current_subr.name);
	E(" workspace at ");
	E_b8(COO_ESCAPE_WSREF);
	E_b16(current_subr.id);
	E_b8(0);
	E_b16(0);
	E(" length ");
	E_b8(COO_ESCAPE_WSSIZE);
	E_b16(current_subr.id);
	E_b8(0);
	E_nl();

	E(".text\n");
	E(".thumb_func\n");
	E_b8(COO_ESCAPE_THISSUB);
	E(":\n");

	var count := current_subr.num_input_parameters;
	var lastparam := count - 1;

	while count != 0 loop
		count := count - 1;
		var param := GetInputParameter(current_subr, count);

		var reg: RegId;
		if count != lastparam then
			E_pop(REG_R0);
		end if;
		E("\tldr r1, =");
		E_symref(param as [Symbol], 0);
		E_nl();

		case param.width is
			when 1: E("\tstrb r0, [r1]\n");
			when 2: E("\tstrh r0, [r1]\n");
			when 4: E("\tstr r0, [r1]\n");
		end case;
	end loop;

	E("\tpush {lr}\n");
}

gen ENDSUB()
{
	E("end_");
	E_subref(current_subr);
	E(":\n");

	var count: uint8 := 0;
	var params := current_subr.num_output_parameters;

	E("\tpop {lr}\n");

	while count != params loop
		var param := GetOutputParameter(current_subr, count);

		E("\tldr r1, =");
		E_symref(param as [Symbol], 0);
		E_nl();
		case param.width is
			when 1: E("\tldrb r0, [r1]\n");
			when 2: E("\tldrh r0, [r1]\n");
			when 4: E("\tldr r0, [r1]\n");
		end case;

		if count != (params-1) then
			E_push(REG_R0);
		end if;

		count := count + 1;
	end loop;

	E("\tbx lr\n");

	E("\t.pool\n");
	EmitterCloseStream();
}

gen RETURN()
{
	E("\tb end_");
	E_subref(current_subr);
	E_nl();
}

