%{
	sub Alu3(insn: string, dest: RegId, lhs: RegId, rhs: RegId, rhsop: [Operand]) is
		E_insn(insn);
		E_reg(dest);
		E_comma();
		E_reg(lhs);
		E_comma();
		E_op(rhs, rhsop);
		E_nl();
	end sub;
%}

