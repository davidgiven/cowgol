gen r8  := AND1($$, r8:rhs)           { E_and($rhs, $$); }
gen r8  := AND1($$, CONSTANT():c)     { E_andi($c.value, $$); }
gen r16 := AND2($$, r16:rhs)          { E_and($rhs, $$); }
gen r16 := AND2($$, CONSTANT():c)     { E_andi($c.value, $$); }

gen r32 := AND4($$, r32:rhs)
{
	E_and(loreg($rhs), loreg($$));
	E_and(hireg($rhs), hireg($$));
}
