// --- Strings --------------------------------------------------------------

gen r16 := STRING():s
{
	R_flush($$);
	E("\tMOV\t#");
	E_string($s.text);
	E(", ");
	E_reg($$);
	E_nl();
}

// --- Initialisers ---------------------------------------------------------

gen STARTINIT():s
{
	EmitterOpenStream(current_subr);
	E("\tdseg\n");
	E("\talign 2\n");
	E_symref(&$s.sym, 0);
	E(":\n");
}

gen ENDINIT()
{
	E("\tcseg\n");
	EmitterCloseStream();
}

gen INIT1():c
{
	E("\tdb\t");
	E_u8($c.value as uint8);
	E_nl();
}

gen INIT2():c
{
	E("\tdw\t");
	E_u16($c.value as uint16);
	E_nl();
}

gen INIT4():c
{
	E("\tdw\t");
	E_u16($c.value as uint16);
	E_comma();
	E_u16((($c.value as uint32) >> 16) as uint16);
	E_nl();
}

gen INITADDRESS():a
{
	E("\tdw\t");
	E_symref(&$a.sym, $a.off);
	E_nl();
}

gen INITSUBREF():a
{
	E("\tdw\t");
	E_subref($a.subr);
	E_nl();
}

gen INITSTRING():s
{
	E("\tdw\t");
	E_string($s.text);
	E_nl();
}

