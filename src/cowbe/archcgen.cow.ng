// --- Subroutines ----------------------------------------------------------

gen STARTSUB():s
{
	EmitterOpenStream(current_subr);

	E("\n// ");
	E(current_subr.name);
	E(" workspace at ");
	E_b8(COO_ESCAPE_WSREF);
	E_b16(current_subr.id);
	E_b8(0);
	E_b16(0);
	E(" length ");
	E_b8(COO_ESCAPE_WSSIZE);
	E_b16(current_subr.id);
	E_b8(0);
	E("\nvoid ");
	E_subref(current_subr);
	E("(");

	var first: uint8 := 1;
	sub comma() is
		if first == 0 then
			E(", ");
		end if;
		first := 0;
	end sub;

	# Output parameters, left to right (the rightmost gets pushed last)

	var count: uint8 := 0;
	while count != current_subr.num_output_parameters loop
		var param := GetOutputParameter(current_subr, count);
		var pid := Push();

		comma();
		E("i");
		E_u8(param.width as uint8);
		E("* p");
		E_u16(pid);

		E(" /* ");
		E(param.name);
		E(" */");
		count := count + 1;
	end loop;

	# Input parameters, right to left (the rightmost was pushed last
	# and so is the first C parameter)

	count := current_subr.num_input_parameters;
	while count != 0 loop
		count := count - 1;
		param := GetInputParameter(current_subr, count);
		pid := Push();

		comma();
		E("i");
		E_u8(param.width as uint8);
		E(" p");
		E_u16(pid);

		E(" /* ");
		E(param.name);
		E(" */");
	end loop;

	if (current_subr.num_input_parameters + current_subr.num_output_parameters) == 0 then
		E("void");
	end if;
	E(") {\n");

	count := 0;
	while count != current_subr.num_input_parameters loop
		param := GetInputParameter(current_subr, count);
		pid := Pop();

		E("\t*(i");
		E_u8(param.width as uint8);
		E("*)(intptr_t)(");
		E_symref(param as [Symbol], 0);
		E(") = p");
		E_u16(pid);
		E("; /*");
		E(param.name);
		E(" */\n");

		count := count + 1;
	end loop;
}

gen ENDSUB()
{
	E("endsub:;\n");

	var count: uint8 := current_subr.num_output_parameters;
	while count != 0 loop
		count := count - 1;
		var param := GetOutputParameter(current_subr, count);
		var pid := Pop();

		E("\t*p");
		E_u16(pid);
		E(" = *(i");
		E_u8(param.width as uint8);
		E("*)(intptr_t)(");
		E_symref(param as [Symbol], 0);
		E(");\n");
	end loop;
	E("}\n");
	EmitterCloseStream();
}

%{
	# subr here is the *interface*.
	sub Call(subrid: SubrId) is
		var subr := FindSubr(subrid);
		var pid := Pop();

		# Allocate vids for the return parameters.

		var outputvid := varid;
		varid := varid + (subr.num_output_parameters as Slot);

		# Declare variables for the output parameters.

		var count: uint8 := 0;
		while count != subr.num_output_parameters loop
			var param := GetOutputParameter(subr, count);

			E("\ti");
			E_u8(param.width as uint8);
			E(" v");
			E_u16(outputvid + (count as Slot));
			E(";\n");

			count := count + 1;
		end loop;

		# Emit the typecast to make the function call work.

		E("\n\t((void(*)");
		EmitFunctionSignature(subr);
		E(")(intptr_t)v");
		E_u16(pid);
		E(")(");

		# Emit the function call itself.

		var first: uint8 := 1;
		sub comma() is
			if first == 0 then
				E(", ");
			end if;
			first := 0;
		end sub;

		# Output parameters (left to right).

		count := 0;
		while count != subr.num_output_parameters loop
			param := GetOutputParameter(subr, count);

			comma();
			E("&v");
			E_u16(outputvid + (count as Slot));

			count := count + 1;
		end loop;

		# Input parameters (right to left; the rightmost gets pushed last)

		count := 0;
		while count != subr.num_input_parameters loop
			var vid := Pop();
			comma();
			E("v");
			E_u16(vid);

			count := count + 1;
		end loop;

		E(");\n");

		# Now push the output parameters (left to right; the last one will be
		# popped first).

		count := 0;
		while count != subr.num_output_parameters loop
			vid := outputvid + (count as Slot);
			PushVid(vid);
			count := count + 1;
		end loop;
	end sub;
%}

