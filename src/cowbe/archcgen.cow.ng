%{
	sub Op1V(width: uint8, op: string) is
		var valid := Pop();
		var vid := Push();
		E("\ti");
		E_u8(width);
		E(" v");
		E_u16(vid);
		E(" = ");
		E(op);
		E("v");
		E_u16(valid);
		E(";\n");
	end sub;
